import java.util.Scanner;

public class MenorAltura {

	public static void main(String[] args) {
		double menorAltura = 99.9;
		String menorNome;
		int contador = 0;
		Scanner ze = new Scanner(System.in);
		do {
			System.out.println("Entre nome.........: ");
			String nome = ze.nextLine();
			System.out.println("Entre altura.......: ");
			double altura = Double.parseDouble(ze.nextLine());
			
			if(altura < menorAltura) {
				menorAltura = altura;
				menorNome = nome;
			}
		} while(contador < 10);

	}

}
