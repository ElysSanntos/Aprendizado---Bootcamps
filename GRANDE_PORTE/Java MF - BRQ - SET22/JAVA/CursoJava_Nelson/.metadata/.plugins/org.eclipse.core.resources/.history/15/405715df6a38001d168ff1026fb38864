import java.util.Scanner;

public class MediaAltura {

	public static void main(String[] args) {
		System.out.println("Media das Alturas");
		System.out.println("Media = " + viaDigitacao());
	}
	
	public static double viaDigitacao() {
		Scanner ze = new Scanner(System.in);
		int qtdePessoas;
		double somaAltura = 0.0;
		
		for(qtdePessoas = 0;qtdePessoas<4;qtdePessoas++) {
			System.out.print("Entre altura...: ");
			double altura = Double.parseDouble(ze.nextLine());
			somaAltura += altura;
		}
		
		double mediaAltura = somaAltura / qtdePessoas;
		return mediaAltura;
	}

}
