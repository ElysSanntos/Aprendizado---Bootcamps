import java.util.Scanner;

public class TestaScanner {
	public static void main(String[] args) {
		Scanner ze = new Scanner(System.in);
		System.out.print("Entre um numero..: ");
		int n = ze.nextInt();
		System.out.println("numero digitado = " + n);
		String texto = "Ontem a rainha morreu.";
		Scanner maria = new Scanner(texto);
		System.out.println(maria.nextLine());
		//System.out.println(maria.next());
		//System.out.println(maria.next());
	}
}